<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security.xsd">


	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/owner**" access="hasRole('ROLE_OWNER')" />
		<intercept-url pattern="/admin**" access="hasRole('ROLE_ADMIN')" />

		<form-login login-page="/login.do" default-target-url="/frontend_home.do"
			login-processing-url="/j_spring_security_check"
			authentication-failure-url="/loginerror.do?error" 
			username-parameter="username"
			password-parameter="password" authentication-success-handler-ref="Handler"
			always-use-default-target="true" />
		<logout logout-success-url="/" logout-url="/j_spring_security_logout" />

	</http>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="select username,password,enabled from login where username=?"
				authorities-by-username-query="select username,role from login where username=?" />
		</authentication-provider>

	</authentication-manager>



	<beans:bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource"
		destroy-method="close">
		<beans:property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<beans:property name="url" value="jdbc:mysql://localhost/pluto" />
		<beans:property name="username" value="root" />
		<beans:property name="password" value="root" />
	</beans:bean>

	<beans:bean id="Handler" class="com.controller.Handler"></beans:bean>

</beans:beans>